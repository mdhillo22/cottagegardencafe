<table border="1">
    <tr>
        <td width="100%">
    <p>A place for coffee, friends, and relaxation!</p>
    <p>View our catalog for more menu items.</p>
    <%if (allrecs.length > 0) {%>
        <% allrecs.forEach((recref, index) => { %>
            <product>
                <form action="/catalog/add" method="post">
                    <input type="hidden" name="product_id" value=<%= recref.product_id %> >
                    <table>
                        <tr> <td colspan="2"><%= recref.productname %></td></tr>
                        <tr> <td colspan="2"><img src="/images/<%= recref.prodimage %>" width="130" height="100"></td></tr>
                        <tr> <td><%= recref.saleprice %></td></tr>
                        <tr> <td><%= recref.status %></td>
                        <td><a href='/product/<%= recref.product_id %>/show'>Details</a></td>
                        </tr>
                    <tr>
                    <td>Quantity: 
                            <select name="qty" required>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                    </td>
                    <td><button type="submit" class="button1">Add to Cart</button></td>
                    </tr>
                
                    </table>
                </form>
            </product>
    <% }); %>
    <% } else { %>
        <p>No Records Available</p>
    <% } %>
    </td>

